<!DOCTYPE html>
<html>
  <head>
 <style>
      body {
        background-color: #C9FFE5; 
      }
    </style>
  </head>
  <body class="prose mx-auto">
<h1> My App </h1>

<% @app_posts.each do |app_post| %>
<div>
<%= image_tag app_post.cover_image if app_post.cover_image.present? %>

<h2><%= link_to app_post.title, app_post  %></h2>
<% if app_post.draft? %>
    <div class="p-2 rounded bg-red-100 text-gray-900">Draft</div>
    <% elsif app_post.schedule? %>
    <div class="p-2 rounded bg-blue-100 text-blue-900">Schedule</div>
    <% else app_post.published? %>
    <div class="p-2 rounded bg-blue-100 text-blue-900">Published</div>
<% end %>
<%= app_post.content %>
</div>
<% end %>

<div class="my-16">

<% if @pagy.count > @pagy.items %>
<div class="my-16">
<%== pagy_nav(@pagy) %>
</div>
<% end %>

</body>
</html>
